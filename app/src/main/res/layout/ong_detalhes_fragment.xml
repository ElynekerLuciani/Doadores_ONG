    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/ong_detalhes_localizacao"-->
    <!--        android:layout_marginHorizontal="24dp"-->
    <!--        android:layout_marginTop="8dp" />-->

</RelativeLayout>