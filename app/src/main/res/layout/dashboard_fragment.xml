<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.dashboard.DashboardFragment">

    <RelativeLayout
        android:id="@+id/dashboard_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_prev" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 1.500,00"
                android:textSize="18dp" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dashboard_section_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_header"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrecadado" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="R$ 3.550,00"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doado" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="R$ 3.550,00"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_section_info"
        android:layout_marginTop="30dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:stretchColumns="2">

            <TableRow
                android:background="#f5f5f5"
                android:paddingVertical="5dp">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Maiores doações do mês" />
            </TableRow>

            <TableRow android:paddingVertical="5dp">

                <TextView
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Jeff Bezos" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="R$ 1.000,00" />
            </TableRow>

            <TableRow android:paddingVertical="5dp">

                <TextView
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Jeff Bezos" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="R$ 1.000,00" />
            </TableRow>

            <TableRow android:paddingVertical="5dp">

                <TextView
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Jeff Bezos" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="R$ 1.000,00" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>
